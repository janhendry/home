{
	"$schema": "./node_modules/rome/configuration_schema.json",
	"linter": {
		"ignore": ["**/dist", "**/node_modules/*", "./app/src/api/Api.ts"],
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noArrayIndexKey": "off",
				"noExplicitAny": "off"
			},
			"a11y": {
				"useKeyWithClickEvents": "off"
			}
		}
	},
	"formatter": {
		"ignore": ["**/dist", "./app/src/api/Api"],
		"lineWidth": 120,
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded"
		}
	}
}
